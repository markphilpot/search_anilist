    "@types/node": "^16.7.13",
    "@types/ramda": "^0.28.7",
    "@types/react": "^18.0.1",
    "@types/react-copy-to-clipboard": "^5.0.2",
    "@types/react-dom": "^17.0.9",
    "classnames": "^2.3.1",
    "graphql": "^15.5.3",
